{
  "name": "pixel-pipe",
  "version": "1.0.0",
  "description": "Pixel-Pipe: An AI-Powered Media Analysis Platform built on a serverless, event-driven architecture with AWS and Terraform.",
  "main": "index.js",
  "scripts": {
    "build:get-upload-url": "esbuild src/handlers/get-upload-url.ts --bundle --platform=node --target=node18 --outfile=dist/get-upload-url/index.js",
    "build:dispatch-tasks": "esbuild src/handlers/dispatch-tasks.ts --bundle --platform=node --target=node18 --outfile=dist/dispatch-tasks/index.js",
    "build:resize-worker": "esbuild src/handlers/resize-worker.ts --bundle --platform=node --target=node18 --outfile=dist/resize-worker/index.js",
    "build": "npm run build:get-upload-url && npm run build:dispatch-tasks && npm run build:resize-worker"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HumbleChaudhry/pixel-pipe.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HumbleChaudhry/pixel-pipe/issues"
  },
  "homepage": "https://github.com/HumbleChaudhry/pixel-pipe#readme",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.844.0",
    "@aws-sdk/client-sns": "^3.844.0",
    "@aws-sdk/s3-request-presigner": "^3.844.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.150",
    "@types/node": "^24.0.13",
    "esbuild": "^0.25.6",
    "typescript": "^5.8.3"
  }
}
